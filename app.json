{
  "expo": {
    "name": "SoulTalk",
    "slug": "soultalk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.dmitryberesten.soultalk",
      "supportsTablet": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSContactsUsageDescription": "Цей додаток використовує контакти для запрошення пари.",
        "NSCalendarsUsageDescription": "Цей додаток використовує календар для планування часу розмов.",
        "NSUserNotificationsUsageDescription": "Цей додаток надсилає щоденні нагадування для SoulTalk."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "612da6e0-a8d9-4971-8b26-4b354d12f46c"
      }
    },
    "plugins": ["@react-native-community/datetimepicker"]
  }
}
