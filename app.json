{
  "expo": {
    "name": "SoulTalk",
    "slug": "soultalk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a0000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.dmitryberesten.soultalk",
      "supportsTablet": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSContactsUsageDescription": "SoulTalk використовує контакти для запрошення вашого партнера до спільних розмов",
        "NSCalendarsUsageDescription": "SoulTalk допомагає планувати час для значущих розмов з партнером",
        "NSUserNotificationsUsageDescription": "SoulTalk надсилає щоденні нагадування для поглиблення стосунків",
        "UIBackgroundModes": ["remote-notification"]
      },
      "entitlements": {}
    },
    "android": {
      "package": "com.dmitryberesten.soultalk",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a0000"
      },
      "permissions": [
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "612da6e0-a8d9-4971-8b26-4b354d12f46c"
      }
    }
  }
}
